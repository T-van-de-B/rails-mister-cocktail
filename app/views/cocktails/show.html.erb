<h1>cocktails#show</h1>

<h2> <%= @cocktail.name %></h2>

<% @cocktail.doses.each do |dose| %>
  <div>
    <p><%= dose.description %></p>
    <p><%= dose.ingredient.name %></p>
    <%= link_to dose_destroy_path(dose), method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </div>
<% end %>

<%= render "doses/new" %>

<%= link_to "Back to list", cocktails_path %>


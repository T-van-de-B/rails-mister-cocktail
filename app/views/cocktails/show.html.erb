<div class="card-trip">
  <%= cl_image_tag @cocktail.photo %>
  <div class="card-trip-infos">
    <div>
      <h2><%= @cocktail.name %></h2>
      <% @cocktail.doses.each do |dose| %>
        <p>Ingredient: <%=dose.ingredient.name %></p>
        <p>Dose: <%= dose.description %></p>
        <%= link_to dose_destroy_path(dose), method: :delete,
          data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash"></i>
        <% end %>
      <% end %>
    </div>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.submit "Add new Ingredient", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>






<div class="footer">
  <div class="footer-links">
   <%= link_to "Back to Home", cocktails_path %>
  </div>
  <div class="footer-copyright">
    This website is brought to you with <i class="fas fa-heart"></i>
  </div>
</div>





